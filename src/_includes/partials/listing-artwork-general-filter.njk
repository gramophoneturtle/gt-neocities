
  {% assign fandoms_class = "" %}
  {% for fd in post.data.aArtwork.fandom %}
      {%- if forloop.length > 0 -%}
          {% assign fandoms_class = fandoms_class | append: ' ' | append: fd %}
      {%- endif -%}
  {% endfor %}

  <section class="work ProjectMoonBIG" fandom="ProjectMoonBIG" pairings="" tags="{{fandoms_class}}" words="" warnings="" crossover="">
      <p>
          <div style="
              padding: 1em; display: flex;
              align-items: center;
              ">
            <span>

              <a href="{{ post.url }}"> 
                {% if post.data.aArtwork.thumbnailUrl  %}
                <img
                  src="{{ post.data.aArtwork.thumbnailUrl }}"
                  alt="{{ post.data.aArtwork.thumbnailAlt }}"
                  style="width: 10em; height: 10em;"
                >
                {% endif %}
                <span> 
                </span>
              </a> 
            </span>
            <span style="padding: 1em;">

              <a href="{{ post.url }}"> {{ post.data.aArtwork.title }}</a> 
              <p>
                Tags:
                {% for fd in post.data.aArtwork.fandom %}
                <tag class="{{fd}}">
                  {{fd}}</tag> 
                {% endfor %}
              </p>
            </span>
          </div>
  </section>


 