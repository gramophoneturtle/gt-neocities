	<link href="http://gramophoneturtle.neocities.com" />
	
	<id>{{ metadata.url }}</id>
	<author>
		<name>Sal @ Gramophone Turtle</name>
		<email>gramophoneturtle@gmail.com</email>
	</author>
	{%- for post in collections.UpdatePosts %} 
		<entry>
			
			<id>{{ post.url }}</id>


			<title>{{ post.data.posts.PostDate }} Update</title>
			<url>{{ post.url }}</url>
			<description>
				{% set singlePost = post %}
				{% include 'partials/update-content.njk' %}
			</description>
		</entry>
	{%- endfor %}
</feed>
