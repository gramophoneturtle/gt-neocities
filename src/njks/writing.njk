---
tags:
  - Writing
pagination:
    data: writing
    size: 1
    alias: story
    addAllPagesToCollections: true
permalink: "writing/{{ story.Title | slugify }}/"
layout: /layouts/base
---
{%- if story.Summary %}
    <h3>Summary</h3>
    {%- for para in story.Summary %}
        <p>{{ para }}</p>
    {% endfor -%}
{%- endif -%}

<p>Posted on: {{ story.SitePostDate }}</p>

{%- if story.Characters %}
    <h3>Characters</h3>
    <p>{{ story.Characters | join(", ") }}</p>

{%- endif -%}

{% if story.urls.length > 0 %}
    <h3>Also Found On</h3>
    <ul>
    {%- for item in story.urls %}
        <li><a href= "{{ item.url }}">{{ item.sitename }}</a> - <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer">â†—</a> 
            {% if item.PostedDate %} [{{ item.PostedDate }}] {% endif %}
        </li>
    {% endfor -%}
    </ul>
{% endif %}

{% if story.Chapters.length > 1 %}
    <h3>Chapters</h3>
    <ol>
        {%- for ch in story.Chapters %}
            <li>
            <a href= {{ ["#",  ch.Title | slugify ] | join }} >{{ ch.Title }}</a>
            </li>
        {% endfor -%}
    </ol>
{% endif %}

<h3> </h3>
{%- for ch in story.Chapters %}
    <h4 id="{{ ch.Title | slugify  }}"
        style="text-align: center;">
        {{ ch.Title }}
    </h4>
    {%- for para in ch.Paragraphs %}
        <p> {{ para | safe }}</p>
    {% endfor -%}
{% endfor -%}